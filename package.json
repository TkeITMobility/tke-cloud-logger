  "license": "Copyright ThyssenKrupp 2016",
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.2",
    "jshint": "^2.9.1",
    "linelint": "^1.0.0",
    "mocha": "^2.4.5",
    "proxyquire": "^1.7.4",
    "sinon": "^1.17.3"
  },
  "dependencies": {
    "bunyan": "^1.7.1",
    "cron-master": "^0.2.0",
    "lodash.map": "^4.2.1",
    "mongo-utils": "git+https://github.com/evanshortiss/mongo-utils.git#0.2.0",
    "xtend": "^4.0.1"
  }
}
